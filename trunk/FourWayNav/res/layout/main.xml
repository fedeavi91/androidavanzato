<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<it.androidavanzato.fourwaynav.FourWayNavView
		android:id="@+id/fourway" android:layout_width="match_parent"
		android:layout_height="match_parent">
	</it.androidavanzato.fourwaynav.FourWayNavView>
	<Button android:layout_width="200dp" android:textSize="40sp"
		android:layout_height="wrap_content" android:text="LEFT"
		android:onClick="left" android:layout_centerVertical="true"
		android:layout_alignParentLeft="true" />
	<Button android:layout_width="200dp" android:textSize="40sp"
		android:layout_height="wrap_content" android:text="RIGHT"
		android:onClick="right" android:layout_centerVertical="true"
		android:layout_alignParentRight="true" />
	<Button android:layout_width="200dp" android:textSize="40sp"
		android:layout_height="wrap_content" android:text="UP"
		android:onClick="up" android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" />
	<Button android:layout_width="200dp" android:textSize="40sp"
		android:layout_height="wrap_content" android:text="DOWN"
		android:onClick="down" android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" />

</RelativeLayout>
