<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/window_bg" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<FrameLayout android:id="@+id/container"
		android:layout_width="280dp" android:gravity="left"
		android:layout_gravity="center" android:layout_height="fill_parent">
		<!-- qui verra' inserito il fragment relativo alla lista di webcams a vdisposizione -->
	</FrameLayout>
	<LinearLayout android:layout_weight="1"
		android:orientation="vertical" android:layout_width="0px"
		android:layout_height="fill_parent">
		<android.app.FragmentBreadCrumbs
			android:background="#000" android:id="@+id/bread_crumbs"
			android:layout_width="fill_parent" android:layout_height="40dp" />
		<FrameLayout android:id="@+id/detail_container"
			android:layout_width="fill_parent" android:gravity="left"
			android:layout_gravity="center" android:layout_height="fill_parent">
			<!-- qui verra' inserito il fragment relativo al dettaglio dell'immagine
			zoomabile con le gesture -->
		</FrameLayout>
	</LinearLayout>
</LinearLayout>