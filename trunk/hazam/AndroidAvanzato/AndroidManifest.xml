        <activity android:name=".ui.Rotate" />
        <activity
            android:name=".ui.Task1"
            android:taskAffinity="it.androidavanzato.one" />
        <activity
            android:name=".ui.Task2"
            android:taskAffinity="it.androidavanzato.one" />
        <activity
